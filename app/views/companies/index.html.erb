<div class="container">

  <h1>Listing Companies</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td class="name"><%= company.name %></td>
          <td>
            <ul>
              <li><%= link_to 'Show', company, class: 'btn btn-success btn-sm' %></li>
              <li><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-info btn-sm' %></li>
              <li><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning btn-sm' %></li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Company', new_company_path, id: 'new_company', class: 'btn btn-primary' %>
</div>